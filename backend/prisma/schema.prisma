generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  passHash  String
  createdAt DateTime @default(now())

  docsOwned Doc[]    @relation("DocOwner")
  members   DocMember[]

  workspaceMembers WorkspaceMember[]
  ownedWorkspaces  Workspace[]
  activities       WorkspaceActivity[]
}

model Workspace {
  id        String   @id @default(uuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())

  members   WorkspaceMember[]
  files     ProjectFile[]
  activities WorkspaceActivity[]
}

model ProjectFile {
  id          String   @id @default(uuid())
  workspaceId String
  name        String
  content     String   @db.Text
  language    String   @default("plaintext")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  versions    FileVersion[]
}

model FileVersion {
  id          String   @id @default(uuid())
  fileId      String
  content     String   @db.Text
  createdBy   String?
  createdAt   DateTime @default(now())

  file        ProjectFile @relation(fields: [fileId], references: [id], onDelete: Cascade)
}

model WorkspaceActivity {
  id          String   @id @default(uuid())
  workspaceId String
  userId      String
  actionType  String
  metadata    Json?
  createdAt   DateTime @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WorkspaceMember {
  id          String   @id @default(uuid())
  workspaceId String
  userId      String
  role        Role     @default(EDITOR)

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
}

model Doc {
  id        String   @id @default(uuid())
  title     String
  ownerId   String
  owner     User     @relation("DocOwner", fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members   DocMember[]
  state     DocState?
  snapshots DocSnapshot[]
  events    DocEvent[]
}

model DocMember {
  id     String @id @default(uuid())
  docId  String
  userId String
  role   Role   @default(EDITOR)

  doc    Doc    @relation(fields: [docId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([docId, userId])
}

model DocState {
  docId     String @id
  doc       Doc    @relation(fields: [docId], references: [id], onDelete: Cascade)
  // store Yjs state as raw bytes
  state     Bytes
  updatedAt DateTime @updatedAt
}

model DocSnapshot {
  id        String   @id @default(uuid())
  docId     String
  doc       Doc      @relation(fields: [docId], references: [id], onDelete: Cascade)
  state     Bytes
  createdAt DateTime @default(now())

  @@index([docId, createdAt])
}

model DocEvent {
  id        String   @id @default(uuid())
  docId     String
  doc       Doc      @relation(fields: [docId], references: [id], onDelete: Cascade)
  type      String
  payload   Json
  createdAt DateTime @default(now())
}

enum Role {
  OWNER
  ADMIN
  EDITOR
  VIEWER
  MEMBER
}
